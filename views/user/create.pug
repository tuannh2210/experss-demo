extends ../layout/common
block content
	
	h1(class="mt-5 text-center") Create user
	if errors
		each error in errors
			.alert.alert-danger= error
	form(action="/users/create", method="POST" enctype="multipart/form-data")
		input(type="hidden", name="_csrf", value=csrfToken)
		.form-group
			label(for="name") Name
			input#name.form-control(type="text" , name="name" ,value=name)
			label(for="phone") Phone
			input#phone.form-control(type="number" , name="phone", value=phone )

			label(for="avatar") Avatar
			input#phone.form-control(type="file" , name="avatar", value=phone )

		//- input(type="text", name="a")
		button.btn.btn-primary.mt-4 Create