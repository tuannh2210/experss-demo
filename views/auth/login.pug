extends ../layout/common
block content
	
	h1(class="mt-5 text-center") Login
	if errors
		each error in errors
			.alert.alert-danger= error
	form(action="/login", method="POST")
		.form-group
			label(for="name") Name
			input#name.form-control(type="text" , name="email" ,value=email)
		label(for="pass") Phone
		input#pass.form-control(type="text" , name="password", value=password )
		//- input(type="text", name="a")
		button.btn.btn-primary.mt-4 Create